<Window x:Class="MedicalLabKiosk.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MedicalLabKiosk"
        mc:Ignorable="d"
        Title="Medical Lab Kiosk" Height="600" Width="1000"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        WindowStartupLocation="CenterScreen">

    <Border CornerRadius="10" Background="{StaticResource BackgroundLightBrush}" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="1">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <!-- Sidebar width -->
                <ColumnDefinition Width="*"/>
                <!-- Main content -->
            </Grid.ColumnDefinitions>

            <!-- === Left Sidebar === -->
            <Border Grid.Column="0" Width="280" Background="{StaticResource SidebarGradientBrush}" CornerRadius="10,0,0,10">
                <Grid Margin="40,40,40,40" Background="{StaticResource SidebarGradientBrush}">
                    <Rectangle HorizontalAlignment="Left" Height="100" Margin="25,25,0,0" VerticalAlignment="Top" Width="150">
                        <Rectangle.Fill>
                            <ImageBrush ImageSource="/assets/images/button_image.png"/>
                        </Rectangle.Fill>
                    </Rectangle>
                    <Rectangle HorizontalAlignment="Left" Height="100" Margin="25,130,0,0" VerticalAlignment="Top" Width="150">
                        <Rectangle.Fill>
                            <ImageBrush ImageSource="/assets/images/button_image.png"/>
                        </Rectangle.Fill>
                    </Rectangle>
                    <Rectangle HorizontalAlignment="Left" Height="100" Margin="25,235,0,0" VerticalAlignment="Top" Width="150">
                        <Rectangle.Fill>
                            <ImageBrush ImageSource="/assets/images/button_image.png"/>
                        </Rectangle.Fill>
                    </Rectangle>
                    <Rectangle HorizontalAlignment="Left" Height="100" Margin="25,340,0,0" VerticalAlignment="Top" Width="150">
                        <Rectangle.Fill>
                            <ImageBrush ImageSource="/assets/images/button_image.png"/>
                        </Rectangle.Fill>
                    </Rectangle>

                </Grid>
            </Border>

            <!-- === Right Content Area === -->
            <Grid Grid.Column="1" Margin="30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Top Bar -->
                    <RowDefinition Height="Auto"/>
                    <!-- Title Section -->
                    <RowDefinition Height="*"/>
                    <!-- Cards -->
                    <RowDefinition Height="Auto"/>
                    <!-- Buttons -->
                </Grid.RowDefinitions>

                <!-- Top Bar -->
                <Grid Grid.Row="0" Margin="0,10,0,30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- User Info -->
                    <StackPanel Orientation="Horizontal" Grid.Column="0">
                        <Ellipse Width="50" Height="50" Margin="0,0,15,0">
                            <Ellipse.Fill>
                                <!-- Placeholder for user image -->
                                <!--<SolidColorBrush Color="Orange"/>-->
                                 <!--Or use ImageBrush:-->
                                <ImageBrush ImageSource="/assets/images/user_image.png" />
                            </Ellipse.Fill>
                        </Ellipse>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Hello" FontSize="{StaticResource FontSizeMedium}" Foreground="{StaticResource ForegroundGrayBrush}"/>
                            <TextBlock Text="Johne" FontSize="{StaticResource FontSizeLarge}" FontWeight="SemiBold"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Progress -->
                    <StackPanel Orientation="Horizontal" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="30,0">
                        <TextBlock Text=" Your progress" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="{StaticResource ForegroundGrayBrush}" FontSize="{StaticResource FontSizeMedium}"/>
                        <!-- Simple person icon -->
                        <ProgressBar Value="60" Maximum="100" Width="250" Style="{StaticResource CustomProgressBarStyle}" VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Next Arrow Button -->
                    <Button Grid.Column="2" Style="{StaticResource {x:Type Button}}" Background="{StaticResource ForegroundLightBrush}" BorderBrush="{StaticResource BorderLightBrush}" Padding="10" MinWidth="50" Width="50" Height="50" BorderThickness="1">
                        <TextBlock Text="" FontFamily="Segoe MDL2 Assets" FontSize="20" Foreground="{StaticResource PrimaryPurpleBrush}"/>
                        <!-- Right Arrow -->
                    </Button>
                </Grid>

                <!-- Title Section -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10,20,0,20">
                    <!-- Placeholder Head Icon -->
                    <!--<Path Data="M12,2C6.48,2 2,6.48 2,12C2,17.52 6.48,22 12,22C17.52,22 22,17.52 22,12C22,6.48 17.52,2 12,2ZM13,17H11V15H13V17ZM13,13H11V7H13V13Z M17,12H15V10H17V12Z M7,12H9V10H7V12Z"
                            Fill="{StaticResource AccentPinkBrush}" Width="40" Height="40" Stretch="Uniform" VerticalAlignment="Center"/>-->
                    <Rectangle Width="40" Height="40" Stretch="Uniform" VerticalAlignment="Center">
                        <Rectangle.Fill>
                            <!-- Placeholder for user image -->
                            <!--<SolidColorBrush Color="Orange"/>-->
                            <!--Or use ImageBrush:-->
                            <ImageBrush ImageSource="/assets/images/head_icon.png" />
                        </Rectangle.Fill>
                    </Rectangle>
                    <TextBlock Text="Body composition" Style="{StaticResource MainTitleStyle}"/>
                </StackPanel>

                <!-- Data Cards -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,30" VerticalAlignment="Top">

                    <!-- Card 1: Extracellular fluid -->
                    <Border Style="{StaticResource CardBorderStyle}" MinWidth="250">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,15">
                                <!-- Placeholder Icon -->
                                <TextBlock Text="💧" FontSize="24" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <TextBlock Text="Extracellular fluid" Style="{StaticResource CardTitleStyle}"/>
                            </StackPanel>

                            <!-- Indicator Bar -->
                            <Grid Grid.Row="1" Height="10" Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <!-- Blue -->
                                    <ColumnDefinition Width="*"/>
                                    <!-- Green -->
                                    <ColumnDefinition Width="*"/>
                                    <!-- Red -->
                                </Grid.ColumnDefinitions>
                                <Rectangle Fill="{StaticResource IndicatorBlueBrush}" Grid.Column="0" RadiusX="5" RadiusY="5"/>
                                <Rectangle Fill="{StaticResource IndicatorGreenBrush}" Grid.Column="1"/>
                                <Rectangle Fill="{StaticResource IndicatorRedBrush}" Grid.Column="2" RadiusX="5" RadiusY="5"/>
                                <!-- Marker Line -->
                                <Line X1="0" Y1="0" X2="0" Y2="15" Stroke="{StaticResource ForegroundDarkBrush}" StrokeThickness="3"
                                      HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1" Margin="-1.5,0,0,0"/>
                            </Grid>

                            <TextBlock Text="26,6" Style="{StaticResource CardValueStyle}" Grid.Row="2"/>
                            <TextBlock Text="Kg" Style="{StaticResource CardUnitStyle}" Grid.Row="3"/>

                            <TextBlock Text="Normal" Style="{StaticResource CardStatusStyle}" Grid.Row="2" Grid.RowSpan="2" VerticalAlignment="Bottom" Margin="0,0,0,5"/>
                        </Grid>
                    </Border>

                    <!-- Card 2: Mineral -->
                    <Border Style="{StaticResource CardBorderStyle}" MinWidth="250">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,15">
                                <!-- Placeholder Icon -->
                                <TextBlock Text="💎" FontSize="24" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <!-- Placeholder Mineral icon -->
                                <TextBlock Text="Mineral" Style="{StaticResource CardTitleStyle}"/>
                            </StackPanel>

                            <!-- Indicator Bar -->
                            <Grid Grid.Row="1" Height="10" Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Rectangle Fill="{StaticResource IndicatorBlueBrush}" Grid.Column="0" RadiusX="5" RadiusY="5"/>
                                <Rectangle Fill="{StaticResource IndicatorGreenBrush}" Grid.Column="1"/>
                                <Rectangle Fill="{StaticResource IndicatorRedBrush}" Grid.Column="2" RadiusX="5" RadiusY="5"/>
                                <!-- Marker Line -->
                                <Line X1="0" Y1="0" X2="0" Y2="15" Stroke="{StaticResource ForegroundDarkBrush}" StrokeThickness="3"
                                      HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1" Margin="-1.5,0,0,0"/>
                            </Grid>

                            <TextBlock Text="3" Style="{StaticResource CardValueStyle}" Grid.Row="2"/>
                            <TextBlock Text="Kg" Style="{StaticResource CardUnitStyle}" Grid.Row="3"/>

                            <TextBlock Text="Normal" Style="{StaticResource CardStatusStyle}" Grid.Row="2" Grid.RowSpan="2" VerticalAlignment="Bottom" Margin="0,0,0,5"/>
                        </Grid>
                    </Border>

                    <!-- Card 3: Glucose (partially visible simulation) -->
                    <Border Style="{StaticResource CardBorderStyle}" MinWidth="250">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,15">
                                <!-- Placeholder Icon -->
                                <TextBlock Text="💧" FontSize="24" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <!-- Placeholder Glucose/Blood icon -->
                                <TextBlock Text="Glucose" Style="{StaticResource CardTitleStyle}"/>
                            </StackPanel>

                            <!-- Indicator Bar -->
                            <Grid Grid.Row="1" Height="10" Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Rectangle Fill="{StaticResource IndicatorBlueBrush}" Grid.Column="0" RadiusX="5" RadiusY="5"/>
                                <Rectangle Fill="{StaticResource IndicatorGreenBrush}" Grid.Column="1"/>
                                <Rectangle Fill="{StaticResource IndicatorRedBrush}" Grid.Column="2" RadiusX="5" RadiusY="5"/>
                                <!-- Marker Line -->
                                <Line X1="0" Y1="0" X2="0" Y2="15" Stroke="{StaticResource ForegroundDarkBrush}" StrokeThickness="3"
                                      HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1" Margin="-1.5,0,0,0"/>
                            </Grid>

                            <TextBlock Text="4.9" Style="{StaticResource CardValueStyle}" Grid.Row="2"/>
                            <TextBlock Text="mmol/L" Style="{StaticResource CardUnitStyle}" Grid.Row="3"/>

                            <!-- Status would normally be here -->
                            <!-- <TextBlock Text="Normal" Style="{StaticResource CardStatusStyle}" Grid.Row="2" Grid.RowSpan="2" VerticalAlignment="Bottom" Margin="0,0,0,5"/> -->
                        </Grid>
                    </Border>

                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,20,0,10">
                    <Button Content="Repeat Test" Style="{StaticResource OutlineButtonStyle}" Margin="0,0,20,0">
                        <!--<StackPanel Orientation="Horizontal">
                            <TextBlock Text="" FontFamily="Segoe MDL2 Assets" Margin="0,0,8,0" VerticalAlignment="Center"/>
                             Refresh icon 
                            <TextBlock Text="Repeat Test" VerticalAlignment="Center"/>
                        </StackPanel>-->
                    </Button>
                    <Button Content="Next Test" Style="{StaticResource FilledButtonStyle}"/>
                </StackPanel>

            </Grid>
        </Grid>
    </Border>
</Window>